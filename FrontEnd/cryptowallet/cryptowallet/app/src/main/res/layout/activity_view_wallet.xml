<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03468f"
    tools:context=".ViewWallet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#03468f"
        tools:context=".ViewWallet">

        <TextView
            android:id="@+id/ViewWalletText"
            android:layout_width="196dp"
            android:layout_height="96dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="81dp"
            android:gravity="center_horizontal"
            android:text="@string/view_wallet_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo1" />

        <TextView
            android:id="@+id/BTCPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="34dp"
            android:text="@string/btc_current_price"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/EthereumButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BitcoinImage"
            app:layout_constraintTop_toBottomOf="@+id/BitcoinButton" />

        <TextView
            android:id="@+id/ETHPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="125dp"
            android:text="@string/eth_current_price"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/backButton10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EthereumImage"
            app:layout_constraintTop_toBottomOf="@+id/EthereumButton" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="305dp"
            android:layout_marginEnd="411dp"
            android:layout_marginBottom="426dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="305dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="418dp"
            android:layout_marginEnd="411dp"
            android:layout_marginBottom="313dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="418dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="538dp"
            android:layout_marginEnd="411dp"
            android:layout_marginBottom="193dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="538dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BitcoinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#646464"
            android:text="@string/bitcoin_button"
            app:layout_constraintBottom_toTopOf="@+id/BTCPrice"
            app:layout_constraintEnd_toStartOf="@+id/bitcoinPriceText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/BitcoinImage"
            app:layout_constraintTop_toBottomOf="@+id/ViewWalletText" />

        <Button
            android:id="@+id/EthereumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#646464"
            android:text="@string/ethereum_button"
            app:layout_constraintBottom_toTopOf="@+id/EthereumImage"
            app:layout_constraintStart_toEndOf="@+id/EthereumImage"
            app:layout_constraintTop_toBottomOf="@+id/BitcoinImage" />

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="106dp"
            android:layout_height="102dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/crypto_wallet_logo"
            app:layout_constraintBottom_toTopOf="@+id/ViewWalletText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/crypto_logo" />

        <ImageView
            android:id="@+id/BitcoinImage"
            android:layout_width="93dp"
            android:layout_height="82dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="109dp"
            android:contentDescription="@string/bitcoin_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ViewWalletText"
            app:srcCompat="@drawable/bitcoin" />

        <ImageView
            android:id="@+id/EthereumImage"
            android:layout_width="87dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toTopOf="@+id/backButton10"
            app:layout_constraintEnd_toStartOf="@+id/EthereumButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BitcoinImage"
            app:srcCompat="@drawable/ethereum"
            android:contentDescription="@string/ethereum_image" />

        <TextView
            android:id="@+id/bitcoinPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="88dp"
            android:text="@string/btc_asset_obtained"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/EthereumAsset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ViewWalletText" />

        <TextView
            android:id="@+id/EthereumAsset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="230dp"
            android:text="@string/eth_asset_obtained"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bitcoinPriceText" />

        <Button
            android:id="@+id/backButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="289dp"
            android:layout_marginBottom="25dp"
            android:text="@string/go_back4"
            android:backgroundTint="#646464"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline3" />

        <TextView
            android:id="@+id/ViewWalletInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:text="@string/page_desc"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ViewWalletText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/sidemenu_header"
        app:menu="@menu/side_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>